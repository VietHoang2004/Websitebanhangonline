@model WebBanHangOnline.Models.EF.Category

@{
    ViewBag.Title = "Cập nhật danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader {
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/category" class="nav-link">Danh mục</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Cập nhật</a>
        </li>
    </ul>
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Cập nhật danh mục</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Danh mục</a></li>
                    <li class="breadcrumb-item active">Cập nhật</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin danh mục</h3>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Edit", "Category", FormMethod.Post, new { }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.HiddenFor(x => x.Id)

                <div class="form-group">
                    <label for="Title">Tên danh mục</label>
                    @Html.TextBoxFor(x => x.Title, new { @class = "form-control", @placeholder = "Tên danh mục" })
                    @Html.ValidationMessageFor(x => x.Title, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="exampleInputLink">Link</label>
                    @Html.TextBoxFor(x => x.Link, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Link, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="Description">Mô tả (nếu có)</label>
                    @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label for="Position">Thứ tự</label>
                    @Html.TextBoxFor(x => x.Position, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label for="SeoTitle">Seo Title</label>
                    @Html.TextAreaFor(x => x.SeoTitle, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label for="SeoDescription">Seo Description</label>
                    @Html.TextAreaFor(x => x.SeoDescription, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label for="SeoKeywords">Seo Keywords</label>
                    @Html.TextAreaFor(x => x.SeoKeywords, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <a href="/admin/category" class="btn btn-danger">Quay lại</a>
                    <button type="submit" class="btn btn-primary">Cập nhật</button>
                </div>
            }
        </div>
    </div>
</section>
</div>
